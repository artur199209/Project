<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wstecz"
            android:id="@+id/BackFromAddContactMenu"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="130dp"
            android:width="70dp"
/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodaj"
            android:id="@+id/AddContactButtton"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="200dp"
            android:width="70dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Imie:"
            android:id="@+id/textName"
            android:layout_marginTop="61dp"
            android:layout_marginLeft="30dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/editName" android:layout_alignLeft="@+id/BackFromAddContactMenu"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nazwisko:"
            android:id="@+id/textSurname"
            android:layout_marginTop="133dp"
            android:layout_marginLeft="30dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:id="@+id/editSurname" android:layout_alignLeft="@+id/BackFromAddContactMenu"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Telefon:"
            android:id="@+id/textTelephone"
            android:layout_marginTop="202dp"
            android:layout_marginLeft="30dp"
/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:id="@+id/editTelephone" android:layout_alignLeft="@+id/BackFromAddContactMenu"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Miasto:"
            android:id="@+id/textCity"
            android:layout_marginTop="272dp"
            android:layout_marginLeft="30dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:id="@+id/editCity" android:layout_alignLeft="@+id/BackFromAddContactMenu"
            android:layout_alignParentRight="true"/>
</RelativeLayout>